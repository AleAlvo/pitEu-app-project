<h1 class="collectionsTitle">My collections</h1>

<div class='container'>
  <div class='row'>

<form action='/{{_id}}/create-collection' method='post' >
  <label for="name" ></label>
  <input class="createCollectionBar" placeholder="Create a collection"type='text' name='name' id='name'>
  <button id='create-collection-btn' type='submit'>Create</button>
</form>

</div>

<div class='container'>
  <div class='row'>

    {{#each collections}}
      
        <a href="/collection/{{this._id}}" class="myCollectionButton"><h2>My Collection:     {{name}}</h2></a>

        <form action="/collection/{{this._id}}/delete" method="post">
         <button type="submit" class="btn btn-dark" style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;"> Delete Collection</button>
        </form>
        <div class="hr-theme-slash-2">
       <div class="hr-line"></div>
       <div class="hr-icon"><img src="/images/e-icon.png" alt="imageE" class="material-icons"></div>
      <div class="hr-line"></div>
</div>
    {{/each}}
  </div>
</div>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}

</div>

