<h1>Favorite Restaurants List</h1>

<div class='container'>
  <div class='row'>
<form>
    {{#each favorites}}
      <div class='card' style='width: 18rem;'>
        <div class='card-body'>
          <img src="{{photos}}" alt="{{name}} photo" class="">
          <h5 class='card-title'>{{name}}</h5>
          <p class='card-text'>{{price_level}}</p>
          <p class='card-text'>{{rating}}</p>
          <a href="{{url}} " class="href">View on Maps</a>
          <a href="{{website}} " class="href">Visit Website</a>
          <p class='card-text'>{{formatted_address}}</p>

          <form action="/restaurant/{{this._id}}" method="get" class="">

          <button type="submit">Comments</button>

          </form>


          
        </div>
      </div>
    {{/each}}
  </div>
</div>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>



